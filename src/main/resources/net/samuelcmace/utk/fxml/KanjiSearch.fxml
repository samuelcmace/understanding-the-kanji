<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="net.samuelcmace.utk.gui.controller.KanjiSearchController" prefHeight="600.0" prefWidth="800.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox>
        <Label text="Search By Kanji Character"/>
        <TextField fx:id="searchByCharacterTextField"/>
        <Button fx:id="searchByCharacterButton" onAction="#searchByCharacterButton_onClick"/>
    </HBox>

    <HBox>
        <Label text="Search By 5th Edition Heisig Index"/>
        <TextField fx:id="searchBy5thEditionHeisigIndexTextField"/>
        <Button fx:id="searchBy5thEditionHeisigIndexButton" onAction="#searchBy5thEditionHeisigIndexButton_onClick"/>
    </HBox>

    <HBox>
        <Label text="Search By 6th Edition Heisig Index"/>
        <TextField fx:id="searchBy6thEditionHeisigIndexTextField"/>
        <Button fx:id="searchBy6thEditionHeisigIndexButton" onAction="#searchBy6thEditionHeisigIndexButton_onClick"/>
    </HBox>

    <HBox>
        <Label text="Search By 5th Edition Heisig Keyword"/>
        <TextField fx:id="searchBy5thEditionHeisigIndexTextField"/>
        <Button fx:id="searchBy5thEditionHeisigIndexButton" onAction="#searchBy5thEditionHeisigKeywordButton_onClick"/>
    </HBox>

    <HBox>
        <Label text="Search By 6th Edition Heisig Keyword"/>
        <TextField fx:id="searchBy6thEditionHeisigIndexTextField"/>
        <Button fx:id="searchBy6thEditionHeisigIndexButton" onAction="#searchBy6thEditionHeisigKeywordButton_onClick"/>
    </HBox>

    <Button fx:id="returnButton" text="Return" onAction="#onClick_returnButton"/>

</VBox>
