<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="net.samuelcmace.utk.gui.controller.KanjiSearchController" prefHeight="600.0" prefWidth="800.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Choose one of the selections below to search for a Kanji character." />

    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER" spacing="28.0">
            <Label text="Search By Kanji Character"/>
            <Label text="Search By 5th Edition Heisig Index"/>
            <Label text="Search By 6th Edition Heisig Index"/>
            <Label text="Search By 5th Edition Heisig Keyword"/>
            <Label text="Search By 6th Edition Heisig Keyword"/>
        </VBox>

        <VBox alignment="CENTER" spacing="20.0">
            <TextField onAction="#searchByCharacterButton_onClick" fx:id="searchByCharacterTextField"/>
            <TextField onAction="#searchBy5thEditionHeisigIndexButton_onClick" fx:id="searchBy5thEditionHeisigIndexTextField"/>
            <TextField onAction="#searchBy6thEditionHeisigIndexButton_onClick" fx:id="searchBy6thEditionHeisigIndexTextField"/>
            <TextField onAction="#searchBy5thEditionHeisigKeywordButton_onClick" fx:id="searchBy5thEditionHeisigKeywordTextField"/>
            <TextField onAction="#searchBy6thEditionHeisigKeywordButton_onClick" fx:id="searchBy6thEditionHeisigKeywordTextField"/>
        </VBox>

        <VBox alignment="CENTER" spacing="20.0">
            <Button onAction="#searchByCharacterButton_onClick" text="Search"/>
            <Button onAction="#searchBy5thEditionHeisigIndexButton_onClick" text="Search"/>
            <Button onAction="#searchBy6thEditionHeisigIndexButton_onClick" text="Search"/>
            <Button onAction="#searchBy5thEditionHeisigKeywordButton_onClick" text="Search"/>
            <Button onAction="#searchBy6thEditionHeisigKeywordButton_onClick" text="Search"/>
        </VBox>
    </HBox>

    <Button fx:id="returnButton" text="Return" onAction="#onClick_returnButton"/>


</VBox>
