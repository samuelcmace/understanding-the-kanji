<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="utk" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>net.samuelcmace.utk.logic.model.hibernate.CardEntity</class>
        <class>net.samuelcmace.utk.logic.model.hibernate.LessonEntity</class>
        <class>net.samuelcmace.utk.logic.model.hibernate.NoteEntity</class>
        <class>net.samuelcmace.utk.logic.model.hibernate.PrimitiveEntity</class>
        <class>net.samuelcmace.utk.logic.model.hibernate.TagEntity</class>
        <class>net.samuelcmace.utk.logic.model.hibernate.CardPrimitiveEntity</class>
        <class>net.samuelcmace.utk.logic.model.hibernate.CardTagEntity</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.jdbc.url" value=""/>
            <property name="jakarta.persistence.jdbc.username" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="sa"/>
            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
        </properties>

    </persistence-unit>
</persistence>